{
  "name": "ryokushen-financial-tracker",
  "version": "1.0.0",
  "description": "Personal financial management application with time-based budgeting",
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest tests/unit",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest tests/integration",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "server": "python3 server.py"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "js/modules/**/*.js",
      "!js/modules/voice/**/*.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.54.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.54.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ryokushen/Ryokushen-Financial.git"
  },
  "keywords": [
    "finance",
    "budgeting",
    "time-tracking",
    "personal-finance"
  ],
  "author": "Ryokushen",
  "license": "MIT"
}
